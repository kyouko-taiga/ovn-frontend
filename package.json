{
    "name": "ovn-frontend",
    "version": "0.0.1",
    "author": "Dimitri Racordon",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/kyouko-taiga/ovn-frontend.git"
    },
    "devDependencies": {
        "babel-preset-es2015": "latest",
        "babel-preset-stage-2": "latest",
        "babel-preset-react": "latest",
        "babelify": "latest",
        "browserify": "latest",
        "clean-css": "latest",
        "node-sass": "latest",
        "uglify-js": "latest",
        "watchify": "latest"
    },
    "dependencies": {
        "bluebird": "latest",
        "flux": "latest",
        "marked": "latest",
        "object-assign": "latest",
        "react": "~0.14.3",
        "react-dom": "~0.14.3",
        "react-router": "~2.0.0"
    },
    "babel": {
        "presets": ["es2015", "stage-2", "react"]
    },
    "browserify": {
        "transform": [
            "babelify"
        ]
    },
    "scripts": {
        "clean": "rm -f public/build/*.js",
        "build-js": "browserify src/app.jsx --extension=.jsx -o public/build/app.js -v -d",
        "build-css": "node-sass assets/css/main.scss public/build/main.css",
        "build": "npm run build-js && npm run build-css",
        "build-min-js": "browserify src/app.jsx --extension=.jsx | uglifyjs -cm > public/build/app.min.js",
        "build-min-css": "node-sass assets/css/main.scss | cleancss -o public/build/main.min.css",
        "build-min": "npm run build-min-js && npm run build-min-css",
        "watch-js": "watchify src/app.jsx --extension=.jsx -o public/build/app.js -v -d"
    }
}